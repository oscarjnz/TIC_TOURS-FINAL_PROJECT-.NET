@model List<capaModelo.DTO.PaqueteDTO>
@{
    ViewBag.Title = "Paquetes Turísticos";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Paquetes Turísticos</h2>

<form class="row mb-3">
    <div class="col-md-4">
        <input type="text" name="destino" class="form-control" placeholder="Buscar destino..." value="@ViewBag.Destino" />
    </div>
    <div class="col-md-4">
        <select name="tipo" class="form-control">
            <option value="">-- Tipo de paquete --</option>
            <option value="económico" @(ViewBag.Tipo == "económico" ? "selected" : "")>Económico</option>
            <option value="estándar" @(ViewBag.Tipo == "estándar" ? "selected" : "")>Estándar</option>
            <option value="premium" @(ViewBag.Tipo == "premium" ? "selected" : "")>Premium</option>
        </select>
    </div>
    <div class="col-md-4">
        <button class="btn btn-primary">Filtrar</button>
        <a href="@Url.Action("Crear", "Paquetes")" class="btn btn-success">Nuevo Paquete</a>
    </div>
</form>

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Duración</th>
        <th>Precio</th>
        <th>Tipo</th>
        <th>Estado</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.NombrePaquete</td>
            <td>@p.DuracionDias días</td>
            <td>$@p.PrecioBase</td>
            <td>@p.TipoPaquete</td>
            <td>@p.Estado</td>
            <td>
                <a href="@Url.Action("Editar", "Paquetes", new { id = p.IdPaquete })" class="btn btn-sm btn-primary">Editar</a>
                <a href="@Url.Action("Eliminar", "Paquetes", new { id = p.IdPaquete })" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar paquete?');">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>


@{
    Layout = null;
}

