@model capaModelo.DTO.CiudadDTO
@{
    ViewBag.Title = Model.IdCiudad > 0 ? "Editar Ciudad" : "Nueva Ciudad";
    var paises = (List<capaModelo.DTO.PaisDTO>)ViewBag.Paises;
    Layout = "../Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.NombreCiudad)
        @Html.TextBoxFor(m => m.NombreCiudad, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Pa√≠s")
        <select name="IdPais" class="form-control">
            @foreach (var p in paises)
            {
                <option value="@p.IdPais" @(Model.IdPais == p.IdPais ? "selected" : "")>@p.NombrePais</option>
            }
        </select>
    </div>
    <button class="btn btn-success">Guardar</button>
    <a href="@Url.Action("Index", "Ciudades")" class="btn btn-secondary">Cancelar</a>
}
