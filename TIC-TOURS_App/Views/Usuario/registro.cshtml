@model capaModelo.DTO.UsuarioDTO

@{
    ViewBag.Title = "Registro de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registro de Usuario</h2>

@using (Html.BeginForm("Registro", "Usuario", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Nombre)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Apellido, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Apellido)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genero)
        @Html.DropDownListFor(m => m.Genero, new SelectList(new[] { "masculino", "femenino", "otro" }), "Seleccione género", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genero)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FechaNacimiento)
        @Html.TextBoxFor(m => m.FechaNacimiento, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FechaNacimiento)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Nacionalidad)
        @Html.TextBoxFor(m => m.Nacionalidad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Nacionalidad)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TipoDocumento)
        @Html.DropDownListFor(m => m.TipoDocumento, new SelectList(new[] { "cédula", "pasaporte" }), "Seleccione tipo", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TipoDocumento)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumeroDocumento)
        @Html.TextBoxFor(m => m.NumeroDocumento, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumeroDocumento)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CorreoElectronico)
        @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control", type = "email" })
        @Html.ValidationMessageFor(m => m.CorreoElectronico)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Contrasena)
        @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Contrasena)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Telefono)
        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Telefono)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Direccion)
        @Html.TextAreaFor(m => m.Direccion, new { @class = "form-control", rows = 2 })
        @Html.ValidationMessageFor(m => m.Direccion)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IdRol)
        @Html.TextBoxFor(m => m.IdRol, new { @class = "form-control", type = "number", min = 1 }) 
        @Html.ValidationMessageFor(m => m.IdRol)
    </div>

    <div class="form-group">
        <input type="submit" value="Registrarse" class="btn btn-primary" />
    </div>

    @* @if (ViewBag.Mensaje != null) *@
    @* { *@
    @*     <div class="alert alert-info">@ViewBag.Mensaje</div> *@
    @* } *@
}

