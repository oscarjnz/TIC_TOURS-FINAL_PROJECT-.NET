@model capaModelo.DTO.UsuarioDTO

@{
    ViewBag.Title = "Registro de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="bg-gray-50 min-h-screen py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Encabezado -->
        <div class="mb-8">
            <h1 class="text-2xl font-bold text-gray-900">Registro de Usuario</h1>
            <p class="mt-2 text-gray-600">Complete el formulario para crear una nueva cuenta en Turismo Seguro</p>
        </div>

        <!-- Formulario -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="p-6">
                @using (Html.BeginForm("Registro", "Usuario", FormMethod.Post, new { @class = "space-y-6" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Información Personal -->
                        <div class="md:col-span-2">
                            <h2 class="text-lg font-medium text-gray-900 border-b pb-2 mb-4">Información Personal</h2>
                        </div>

                        <!-- Nombre -->
                        <div>
                            <label for="Nombre" class="block text-sm font-medium text-gray-700 mb-1">
                                @Html.LabelFor(m => m.Nombre, "Nombre")
                            </label>
                            <div class="mt-1">
                                @Html.TextBoxFor(m => m.Nombre, new { 
                                    @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50",
                                    placeholder = "Ingrese su nombre"
                                })
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                @Html.ValidationMessageFor(m => m.Nombre)
                            </div>
                        </div>

                        <!-- Apellido -->
                        <div>
                            <label for="Apellido" class="block text-sm font-medium text-gray-700 mb-1">
                                @Html.LabelFor(m => m.Apellido, "Apellido")
                            </label>
                            <div class="mt-1">
                                @Html.TextBoxFor(m => m.Apellido, new { 
                                    @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50",
                                    placeholder = "Ingrese su apellido"
                                })
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                @Html.ValidationMessageFor(m => m.Apellido)
                            </div>
                        </div>

                        <!-- Género -->
                        <div>
                            <label for="Genero" class="block text-sm font-medium text-gray-700 mb-1">
                                @Html.LabelFor(m => m.Genero, "Género")
                            </label>
                            <div class="mt-1">
                                @Html.DropDownListFor(m => m.Genero, 
                                    new SelectList(new[] { "masculino", "femenino", "otro" }), 
                                    "-- Seleccione género --", 
                                    new { 
                                        @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50"
                                    }
                                )
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                @Html.ValidationMessageFor(m => m.Genero)
                            </div>
                        </div>

                        <!-- Fecha de Nacimiento -->
                        <div>
                            <label for="FechaNacimiento" class="block text-sm font-medium text-gray-700 mb-1">
                                @Html.LabelFor(m => m.FechaNacimiento, "Fecha de Nacimiento")
                            </label>
                            <div class="mt-1">
                                @Html.TextBoxFor(m => m.FechaNacimiento, "{0:yyyy-MM-dd}", new { 
                                    type = "date", 
                                    @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50"
                                })
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                @Html.ValidationMessageFor(m => m.FechaNacimiento)
                            </div>
                        </div>

                        <!-- Nacionalidad -->
                        <div>
                            <label for="Nacionalidad" class="block text-sm font-medium text-gray-700 mb-1">
                                @Html.LabelFor(m => m.Nacionalidad, "Nacionalidad")
                            </label>
                            <div class="mt-1">
                                @Html.TextBoxFor(m => m.Nacionalidad, new { 
                                    @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50",
                                    placeholder = "Ej: Dominicana"
                                })
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                @Html.ValidationMessageFor(m => m.Nacionalidad)
                            </div>
                        </div>

                        <!-- Información de Documento -->
                        <div class="md:col-span-2 mt-4">
                            <h2 class="text-lg font-medium text-gray-900 border-b pb-2 mb-4">Información de Documento</h2>
                        </div>

                        <!-- Tipo de Documento -->
                        <div>
                            <label for="TipoDocumento" class="block text-sm font-medium text-gray-700 mb-1">
                                @Html.LabelFor(m => m.TipoDocumento, "Tipo de Documento")
                            </label>
                            <div class="mt-1">
                                @Html.DropDownListFor(m => m.TipoDocumento, 
                                    new SelectList(new[] { "cédula", "pasaporte" }), 
                                    "-- Seleccione tipo --", 
                                    new { 
                                        @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50"
                                    }
                                )
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                @Html.ValidationMessageFor(m => m.TipoDocumento)
                            </div>
                        </div>

                        <!-- Número de Documento -->
                        <div>
                            <label for="NumeroDocumento" class="block text-sm font-medium text-gray-700 mb-1">
                                @Html.LabelFor(m => m.NumeroDocumento, "Número de Documento")
                            </label>
                            <div class="mt-1">
                                @Html.TextBoxFor(m => m.NumeroDocumento, new { 
                                    @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50",
                                    placeholder = "Ingrese su número de documento"
                                })
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                @Html.ValidationMessageFor(m => m.NumeroDocumento)
                            </div>
                        </div>

                        <!-- Información de Contacto -->
                        <div class="md:col-span-2 mt-4">
                            <h2 class="text-lg font-medium text-gray-900 border-b pb-2 mb-4">Información de Contacto</h2>
                        </div>

                        <!-- Correo Electrónico -->
                        <div>
                            <label for="CorreoElectronico" class="block text-sm font-medium text-gray-700 mb-1">
                                @Html.LabelFor(m => m.CorreoElectronico, "Correo Electrónico")
                            </label>
                            <div class="mt-1">
                                @Html.TextBoxFor(m => m.CorreoElectronico, new { 
                                    @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50",
                                    type = "email",
                                    placeholder = "ejemplo@correo.com"
                                })
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                @Html.ValidationMessageFor(m => m.CorreoElectronico)
                            </div>
                        </div>

                        <!-- Teléfono -->
                        <div>
                            <label for="Telefono" class="block text-sm font-medium text-gray-700 mb-1">
                                @Html.LabelFor(m => m.Telefono, "Teléfono")
                            </label>
                            <div class="mt-1">
                                @Html.TextBoxFor(m => m.Telefono, new { 
                                    @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50",
                                    placeholder = "Ej: +1 (809) 555-1234"
                                })
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                @Html.ValidationMessageFor(m => m.Telefono)
                            </div>
                        </div>

                        <!-- Dirección -->
                        <div class="md:col-span-2">
                            <label for="Direccion" class="block text-sm font-medium text-gray-700 mb-1">
                                @Html.LabelFor(m => m.Direccion, "Dirección")
                            </label>
                            <div class="mt-1">
                                @Html.TextAreaFor(m => m.Direccion, new { 
                                    @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50",
                                    rows = 2,
                                    placeholder = "Ingrese su dirección completa"
                                })
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                @Html.ValidationMessageFor(m => m.Direccion)
                            </div>
                        </div>

                        <!-- Información de Cuenta -->
                        <div class="md:col-span-2 mt-4">
                            <h2 class="text-lg font-medium text-gray-900 border-b pb-2 mb-4">Información de Cuenta</h2>
                        </div>

                        <!-- Contraseña -->
                        <div>
                            <label for="Contrasena" class="block text-sm font-medium text-gray-700 mb-1">
                                @Html.LabelFor(m => m.Contrasena, "Contraseña")
                            </label>
                            <div class="mt-1">
                                @Html.PasswordFor(m => m.Contrasena, new { 
                                    @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50",
                                    placeholder = "••••••••"
                                })
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                @Html.ValidationMessageFor(m => m.Contrasena)
                            </div>
                            <p class="mt-1 text-xs text-gray-500">La contraseña debe tener al menos 8 caracteres, incluyendo letras y números</p>
                        </div>

                        <!-- Rol (solo visible para administradores) -->
                        
                        @if (true)
                        {
                            <div>
                                <label for="IdRol" class="block text-sm font-medium text-gray-700 mb-1">
                                    @Html.LabelFor(m => m.IdRol, "Rol de Usuario")
                                </label>
                                <div class="mt-1">
                                    @Html.DropDownListFor(m => m.IdRol, 
                                        new SelectList(new[] 
                                        { 
                                            new { Value = "2", Text = "Cliente" },
                                            new { Value = "3", Text = "Agente" },
                                            new { Value = "1", Text = "Administrador" }
                                        }, "Value", "Text"), 
                                        new { 
                                            @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50"
                                        }
                                    )
                                </div>
                                <div class="mt-1 text-sm text-red-600">
                                    @Html.ValidationMessageFor(m => m.IdRol)
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Términos y condiciones -->
                    <div class="mt-6">
                        <div class="flex items-start">
                            <div class="flex items-center h-5">
                                <input id="terms" name="terms" type="checkbox" class="h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded">
                            </div>
                            <div class="ml-3 text-sm">
                                <label for="terms" class="font-medium text-gray-700">Acepto los términos y condiciones</label>
                                <p class="text-gray-500">Al registrarse, acepta nuestros <a href="#" class="text-teal-600 hover:text-teal-500">términos de servicio</a> y <a href="#" class="text-teal-600 hover:text-teal-500">política de privacidad</a>.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de acción -->
                    <div class="flex items-center justify-end space-x-4 pt-4 border-t border-gray-200 mt-8">
                        <a href="@Url.Action("login", "Usuario")" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition-colors duration-200">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
                            </svg>
                            Ya tengo una cuenta
                        </a>
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition-colors duration-200">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            Registrarse
                        </button>
                    </div>

                    <!-- Mensaje de error/éxito -->
                    if (ViewBag.Mensaje != null)
                    {
                        <div class="mt-4 bg-blue-50 rounded-lg p-4 border border-blue-100">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-blue-700">@ViewBag.Mensaje</p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>