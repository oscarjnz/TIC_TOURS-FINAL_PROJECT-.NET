                        @{
                            string statusClass = "bg-yellow-100 text-yellow-800";
                            string statusIcon = "clock";

                            if (r.Estado.ToLower() == "aprobada") {
                                statusClass = "bg-green-100 text-green-800";
                                statusIcon = "check-circle";
                            }
                            else if (r.Estado.ToLower() == "rechazada") {
