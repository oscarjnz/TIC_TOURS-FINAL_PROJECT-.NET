@model capaModelo.DTO.PaqueteDTO
@{
    ViewBag.Title = "Detalle del Paquete";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>@Model.NombrePaquete</h2>

<div class="card p-4 mb-3 shadow-sm">
    <p><strong>Descripción:</strong> @Model.Descripcion</p>
    <p><strong>Duración:</strong> @Model.DuracionDias días</p>
    <p><strong>Precio base:</strong> RD$@Model.PrecioBase.ToString("N2")</p>
    <p><strong>Tipo:</strong> @Model.TipoPaquete</p>
</div>

<div class="text-right">
    <a href="@Url.Action("Cotizar", "Home", new { id = Model.IdPaquete })" class="btn btn-success">Cotizar este paquete</a>
</div>
